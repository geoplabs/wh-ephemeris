{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phrasebank",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "archetype": {
            "type": "string",
            "enum": [
              "Radiant Expansion",
              "Prosperity Build",
              "Heart-Centered Calibration",
              "Disciplined Crossroads",
              "Visionary Alignment",
              "Phoenix Reframe",
              "Steady Integration"
            ]
          },
          "intensity": {
            "type": "string",
            "enum": [
              "background",
              "gentle",
              "steady",
              "strong",
              "surge"
            ]
          },
          "area": {
            "type": "string",
            "enum": [
              "general",
              "career",
              "love",
              "health",
              "finance"
            ]
          },
          "clause_variants": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "bullet_templates": {
            "type": "object",
            "properties": {
              "do": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "pattern": "\\{phrase\\}"
                }
              },
              "avoid": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "pattern": "\\{phrase\\}"
                }
              }
            },
            "required": [
              "do",
              "avoid"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "archetype",
          "intensity",
          "area",
          "clause_variants",
          "bullet_templates"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "entries"
  ],
  "additionalProperties": false
}
