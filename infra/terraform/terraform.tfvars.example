# Copy this file to terraform.tfvars and replace placeholder values with your environment-specific data.
# The values below illustrate the production whathoroscope.com deployment that keeps costs in the $30-50/month range.

aws_region      = "us-east-1"
environment     = "prod"

# Replace with the ECR image URI that contains the WH-Ephemeris container you want to deploy.
container_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/wh-ephemeris:prod-latest"

# Existing ACM certificate in us-east-1 that includes api.whathoroscope.com
certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/aaaaaaaa-bbbb-cccc-dddd-eeeeeeeeeeee"

# Hosted zone ID for the delegated Route 53 zone serving api.whathoroscope.com
route53_zone_id = "ZABCDEFGHIJKLMNOP"

# Public DNS record created in the delegated zone
app_domain_name = "api.whathoroscope.com"

# S3 bucket name used for public assets and PDF reports
assets_bucket_name = "wh-ephemeris-assets-prod"

# CloudFront alternate domain names for the assets distribution (optional)
assets_cnames = [
  "assets.whathoroscope.com",
]

# Strong password for the initial RDS PostgreSQL master user (change immediately after deploy)
db_password = "CHANGE_ME_WITH_A_SECURE_PASSWORD"

# Tags applied to all supported resources
additional_tags = {
  Project     = "wh-ephemeris"
  Environment = "prod"
}

# Leave Redis disabled to remain inside the target budget; set to true when caching is required.
enable_elasticache = false
