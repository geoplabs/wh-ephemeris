# --- App ---
APP_ENV=dev
PORT=8080
JWT_AUD=whathoroscope
JWT_ISS=wh-ephemeris-dev
# For dev only; replace in real setups
JWT_PUBLIC_KEY=dev_only_dummy_key
HMAC_SECRET=dev_only_hmac_secret

# --- Security ---
AUTH_ENABLED=true
API_KEYS=wh-key-123,wh-key-456

# --- Rate limit ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=10

# --- Logging ---
LOGGING_ENABLED=true

# --- Defaults (your decisions) ---
DEFAULT_WESTERN_HOUSE=placidus
DEFAULT_VEDIC_HOUSE=whole_sign
DEFAULT_AYANAMSHA=lahiri
INCLUDE_CHIRON=true
ALLOW_GEMSTONES=true
UNKNOWN_TIME_POLICY=solar_whole_sign

# --- DB ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ephemeris
POSTGRES_USER=ephem
POSTGRES_PASSWORD=ephem

# --- LocalStack (S3 + SQS) ---
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_ENDPOINT=http://localstack:4566
S3_BUCKET=wh-reports-dev
SQS_ENDPOINT=http://localstack:4566
SQS_QUEUE=wh-reports-jobs
AWS_ENDPOINT_URL=http://localstack:4566

# --- Dev assets (served by API in dev) ---
ASSETS_BASE_URL=http://localhost:8080/dev-assets
EPHEMERIS_DIR=/app/data/ephemeris
NATAL_USE_HTTP=false

# --- OpenAI ---
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# Default place fallbacks for Panchang API
DEFAULT_PLACE_LAT=28.6139
DEFAULT_PLACE_LON=77.2090
DEFAULT_PLACE_TZ=Asia/Kolkata
DEFAULT_PLACE_LABEL=New Delhi, India
