# Core Application
APP_ENV=development
PORT=8080

# Authentication & Security
AUTH_ENABLED=false
API_KEYS=test-key-1,test-key-2
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=10
LOGGING_ENABLED=false

# Ephemeris Configuration
EPHEMERIS_BACKEND=swieph
EPHEMERIS_DIR=./data/ephemeris

# Astrology Defaults
DEFAULT_AYANAMSHA=lahiri
DEFAULT_WESTERN_HOUSE=placidus
DEFAULT_VEDIC_HOUSE=whole_sign
UNKNOWN_TIME_POLICY=solar_whole_sign
INCLUDE_CHIRON=true
ALLOW_GEMSTONES=true

# Place Defaults (New Delhi)
DEFAULT_PLACE_LAT=28.6139
DEFAULT_PLACE_LON=77.2090
DEFAULT_PLACE_TZ=Asia/Kolkata
DEFAULT_PLACE_LABEL=New Delhi, India

# PDF Generation
USE_WEASY=true

# API Configuration
NATAL_USE_HTTP=false

# AWS Configuration (for LocalStack in development)
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET=wh-reports-dev
SQS_QUEUE=wh-reports-jobs

# Database Configuration (for docker-compose)
DATABASE_URL=postgresql://ephem:ephem@postgres:5432/ephemeris
