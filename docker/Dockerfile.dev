FROM python:3.11-slim

# System deps for WeasyPrint (PDF) & fonts
RUN apt-get update && apt-get install -y --no-install-recommends     libcairo2 libpango-1.0-0 libpangoft2-1.0-0 libharfbuzz0b libfreetype6     fonts-dejavu curl git  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Python deps (minimal to boot; expand later)
RUN pip install --no-cache-dir fastapi uvicorn[standard] jinja2 weasyprint pyswisseph pydantic==2.* boto3 botocore requests python-dotenv pytest httpx

# App code
COPY api/ /app/api/
COPY data/ /app/data/

ENV PYTHONUNBUFFERED=1
ENV EPHEMERIS_DIR=/app/data/ephemeris

EXPOSE 8080
CMD ["uvicorn", "api.app:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]
